@page
@model SmartGym.Pages.EditProfileModel
@{
    ViewData["Title"] = "Cập nhật thông tin cá nhân";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<!-- ✅ Hiển thị thông báo thành công nếu có -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<!-- ✅ Validation summary hiển thị các lỗi -->
<validation-summary asp-validation-summary="All" class="text-danger"></validation-summary>

<!-- ✅ FORM chính -->
<form method="post" asp-antiforgery="true">
    <div class="form-group">
        <label asp-for="Input.FullName" class="form-label"></label>
        <input asp-for="Input.FullName" class="form-control" />
        <span asp-validation-for="Input.FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.DateOfBirth" class="form-label"></label>
        <input asp-for="Input.DateOfBirth" type="date" class="form-control" />
        <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Height" class="form-label"></label>
        <input asp-for="Input.Height" class="form-control" />
        <span asp-validation-for="Input.Height" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Weight" class="form-label"></label>
        <input asp-for="Input.Weight" class="form-control" />
        <span asp-validation-for="Input.Weight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Gender" class="form-label"></label>
        <select asp-for="Input.Gender" class="form-control">
            <option value="">-- Chọn giới tính --</option>
            <option value="Nam">Nam</option>
            <option value="Nữ">Nữ</option>
            <option value="Khác">Khác</option>
        </select>
        <span asp-validation-for="Input.Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Goal" class="form-label"></label>
        <select asp-for="Input.Goal" class="form-control">
            <option value="Giữ dáng">Giữ dáng</option>
            <option value="Giảm cân">Giảm cân</option>
            <option value="Tăng cơ">Tăng cơ</option>
        </select>
        <span asp-validation-for="Input.Goal" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Lưu thông tin</button>
</form>

<!-- ✅ Scripts hỗ trợ Validation -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

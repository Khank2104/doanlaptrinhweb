@page "{id:int}"
@model SmartGym.Pages.EditWaterModel
@{
    ViewData["Title"] = "Chỉnh sửa lượng nước";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary">@ViewData["Title"] 💧</h2>

    <form method="post" class="card shadow p-4 bg-white">
        <input type="hidden" asp-for="Input.Id" />

        <div class="form-group mb-3">
            <label asp-for="Input.AmountInMilliliters" class="form-label fw-bold">Lượng nước (ml):</label>
            <div class="input-group">
                <input asp-for="Input.AmountInMilliliters" class="form-control" />
                <span class="input-group-text">ml</span>
            </div>
            <span asp-validation-for="Input.AmountInMilliliters" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Input.LogDate" class="form-label fw-bold">Ngày ghi nhận:</label>
            <input asp-for="Input.LogDate" type="date" class="form-control" />
            <span asp-validation-for="Input.LogDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-warning w-100">✏️ Cập nhật</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
